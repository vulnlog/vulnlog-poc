{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vulnlog.dev/vulnerabilities.reports.vulnlog.schema.json",
  "title": "Vulnlog Vulnerability Reports Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "at": {
        "title": "Reported at Date",
        "description": "Date on which this report was created. Format: YYYY-MM-DD",
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "format": "date"
      },
      "on-id": {
        "title": "Reported Release",
        "description": "Releases on which this vulnerability report applies to.",
        "$ref": "#/$defs/on"
      },
      "reporter-id": {
        "title": "Reporter",
        "description": "Reporter of this vulnerability report.",
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        ]
      },
      "suppression": {
        "title": "Suppress Report",
        "description": "Whether this report should be suppressed.",
        "$ref": "#/$defs/suppression"
      },
      "vuln-id": {
        "title": "Vulnerability ID",
        "description": "Identifier of the vulnerability. Can be a CVE or a Snyk ID.",
        "examples": [ "CVE-2021-44228" ],
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        ]
      }
    }
  },
  "$defs": {
    "suppression": {
      "$ref": "vulnerabilities.reports.suppression.vulnlog.schema.json"
    },
    "on": {
      "$ref": "on.vulnlog.schema.json"
    }
  }
}
