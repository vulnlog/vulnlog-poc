{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vulnlog.dev/metadata.schema.json",
  "title": "Vulnlog Metadata Schema",
  "description": "Validates Vulnlog Vulnlog YAML files.",
  "type": "object",
  "properties": {
    "vendor": {
      "title": "Vendor",
      "description": "The vendor of the product.",
      "type": "string"
    },
    "product": {
      "title": "Product",
      "description": "The product this Vulnlog files covers.",
      "type": "string"
    },
    "author": {
      "title": "Author",
      "description": "This Vulnlog file is curated by the authoring person or team.",
      "type": "string"
    }
  },
  "additionalProperties": false
}
