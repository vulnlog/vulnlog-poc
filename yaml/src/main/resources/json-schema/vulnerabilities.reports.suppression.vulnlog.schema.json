{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vulnlog.dev/vulnerabilities.reports.suppression.vulnlog.schema.json",
  "title": "Vulnlog Vulnerability Report Suppression Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "on": {
        "title": "Suppress on Releases",
        "description": "Releases on which this suppression should be applied.",
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        ]
      },
      "owasp": {
        "title": "OWASP Dependency Check Suppression",
        "description": "Setups a OWASP Dependency Check suppression.",
        "$ref": "#/$defs/owasp"
      },
      "snyk": {
        "title": "Snyk Open Source Suppression",
        "description": "Setups a Snyk Open Source suppression.",
        "$ref": "#/$defs/snyk"
      },
      "trivy": {
        "title": "Trivy Suppression",
        "description": "Setups a Trivy suppression.",
        "$ref": "#/$defs/trivy"
      },
      "until": {
        "title": "Suppress Until",
        "description": "Date until this suppression should be active to. Format: YYYY-MM-DD",
        "examples": [ "1970-01-01" ],
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "format": "date"
      }
    }
  },
  "$defs": {
    "owasp": {
      "$ref": "vulnerabilities.reports.suppression.owasp.vulnlog.schema.json"
    },
    "snyk": {
      "$ref": "vulnerabilities.reports.suppression.snyk.vulnlog.schema.json"
    },
    "trivy": {
      "$ref": "vulnerabilities.reports.suppression.trivy.vulnlog.schema.json"
    }
  }
}
