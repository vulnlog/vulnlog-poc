{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vulnlog.dev/vulnerabilities.analysis.vulnlog.schema.json",
  "title": "Vulnlog Vulnerability Analysis Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "verdict": {
        "type": "object",
        "title": "Verdict",
        "description": "TODO",
        "$ref": "#/$defs/verdict"
      },
      "at": {
        "title": "Analysis Date",
        "description": "Date when this vulnerability report was analyzed. When left empty, the date of the first report is used implicitly. Format: YYYY-MM-DD",
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "format": "date"
      },
      "reasoning": {
        "title": "Reasoning",
        "description": "TODO",
        "type": "string",
        "minimum": 2
      }
    }
  },
  "$defs": {
    "verdict": {
      "$ref": "vulnerabilities.analysis.verdict.vulnlog.schema.json"
    }
  }
}
