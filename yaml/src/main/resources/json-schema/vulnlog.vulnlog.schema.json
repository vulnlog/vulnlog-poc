{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vulnlog.dev/vulnlog.vulnlog.schema.json",
  "title": "Vulnlog Vulnlog Schema",
  "description": "Validates Vulnlog Vulnlog YAML files.",
  "type": "object",
  "properties": {
    "version": {
      "title": "Version",
      "description": "The version of the Vulnlog file.",
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "vendor": {
      "title": "Vendor",
      "description": "The vendor of the product.",
      "type": "string"
    },
    "product": {
      "title": "Product",
      "description": "The product this Vulnlog files covers.",
      "type": "string"
    }
  },
  "additionalProperties": false
}
